[{{ client_code }}{{ env_type }}]
 
user = www-data
group = www-data
 
listen = /var/run/php/php5-fpm.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660
 
 
pm = static
pm.max_children = {{ fpm_max_children }}
pm.max_requests = 100
 
pm.status_path = /fpmstatus
ping.path = /fpmping
ping.response = pong
 
access.log = /var/log/fpm/access.log
access.format = "%R - %u %t \"%m %r%Q%q\" %s %f %{mili}d %{kilo}M %C%%"
slowlog = /var/log/fpm/slow.log
request_slowlog_timeout = 30s
 
security.limit_extensions = .php
 
 
php_admin_value[error_log] = /var/log/fpm/error.log
php_admin_flag[log_errors] = on
 
 
php_admin_value[memory_limit] = {{ fpm_memory_limit }}M
